@if (TempData.ContainsKey("success"))
{
    <div class="p-2 bg-green-500 text-white border-2 border-green-700 mb-4 md:max-w-screen-sm">
        @TempData["success"]
    </div>
}

@if (TempData.ContainsKey("error"))
{
    <div class="p-2 bg-red-500 text-white border-2 border-red-700 mb-4 md:max-w-screen-sm">
        @TempData["error"]
    </div>
}

<form class="bg-white p-4 shadow-md rounded-md md:max-w-screen-sm" method="post" enctype="multipart/form-data" asp-action="ImportFile">
    <h3 class="text-lg font-bold mb-4">UDisc CSV File upload</h3>
    <input name="file" class="mb-1" type="file"/>
    <button class="block rounded-sm p-1 bg-gray-700 text-white" type="submit">Import</button>
</form>

<div class="p-4 font-bold text-lg md:max-w-screen-sm text-center">
    -------- OR --------
</div>

<form class="bg-white p-4 shadow-md rounded-md md:max-w-screen-sm" method="post" asp-action="ImportText">
    <h3 class="text-lg font-bold mb-4">UDISC CSV Text paste</h3>
    <textarea name="csv" class="w-full" placeholder="Paste CSV here" rows="10"></textarea>
    <button class="block rounded-sm p-1 bg-gray-700 text-white" type="submit">Import</button>
</form>